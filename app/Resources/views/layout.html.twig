{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">


  <title>{% block title %}ri Plateforme{% endblock %}</title>

  {% block stylesheets %}
    {# On charge le CSS de bootstrap depuis le site directement #}
    
      <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
  {% endblock %}
</head>

<body>
  <div class="container">
    <div id="header" class="jumbotron">
      <h1>Ma plateforme d'annonces </h1>
      <p>
        Ce projet est un projet d'autoformation propulsé par Symfony2,
         2017/2018
      </p>
      <p>
        <a class="btn btn-primary btn-lg" href="">
            VOTRE AVIS SUR LE PROJET »
        </a>
      </p>
    </div>

    <div class="row">
      <div id="menu" class="col-md-3">
        <h3>Les annonces</h3>
        <ul class="nav nav-pills nav-stacked">
          <li><a href="{{ path('ri_platform_home') }}">Accueil</a></li>
          <li><a href="{{ path('ri_platform_add') }}">Ajouter une annonce</a></li>
          <li><a href="">Modifier une annonce</a></li>
          <li><a href="">Supprimer une annonce</a></li>
        </ul>

        <h4>Dernières annonces</h4>
        {{ render(controller("riPlatformeBundle:Advert:menu")) }}
      </div>
      <div id="content" class="col-md-9">
        {% block body %}
        {% endblock %}
      </div>
    </div>

    <hr>

    <footer>
      <p>The sky's the limit © {{ 'now'|date('Y') }} AutoFormation.</p>
    </footer>
  </div>

  {% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
      <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
      
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

  {% endblock %}

</body>
</html>

